<div class="todo-item @(IsComplete ? `completed` : ``)">
    <input type="checkbox" @bind="IsComplete" />
    <button @onclick="DeleteItem" class="btn @(IsProcessing ? `disabled` : ``)">Delete</button>
</div>

@code {
    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public bool IsComplete { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

    private void Delete()
    {
        OnDelete.InvokeAsync();
    }
}